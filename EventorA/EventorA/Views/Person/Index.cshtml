@using Microsoft.AspNet.Identity 
@model IEnumerable<EventorA.Models.Person>


@{
    ViewBag.Title = "Lista korisnika";
}

<h2>Lista korisnika</h2>
@if (Request.IsAuthenticated & User.Identity.GetUserName() == "Admin")
            {
<p>
    @Html.ActionLink("Dodaj novog korisnika", "Create")
</p>
}
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>

        <th>
            Opcije
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            
            <td>
                @if (Request.IsAuthenticated & User.Identity.GetUserName() == "Admin")
                {
                @Html.ActionLink("Izmieni", "Edit", new { id = item.PersonID })  @:|
                
                @Html.ActionLink("Izbrisi", "Delete", new { id = item.PersonID }) @:|
                }
                @Html.ActionLink("Detalji", "Details", new { id = item.PersonID }) 
            </td>  
            
        </tr>
    }
</table>
